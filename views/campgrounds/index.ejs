<% layout("../layouts/boilerplate") %>
    <div id="map" style="width: 100%; height: 500px;"></div>
    <div class="container mt-3 mb-3">
        <h1>Campgrounds</h1>
            <% for(const campground of campgrounds) {%>
                <div class="card mb-2"></div>
                <div class="row">
                    <div class="col-md-4">
                        <% if(campground.image.length) {%>
                            <img class="img-fluid" src="<%= campground.image[0].url %> " alt="">
                            <% }else{ %>
                                <img class="img-fluid"
                                    src="https://res.cloudinary.com/db1pq7dxf/image/upload/v1625921471/YelpCamp/wifm9xyn8jekqjseegch.jpg"
                                    alt="">
                                <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%=campground.title%>
                            </h5>
                            <p class="card-text">
                                <%=campground.description%>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%= campground.location %>
                                </small>

                            </p>
                            <p class="card-text">
                                <a href="campgrounds/<%=campground._id%>" class="btn btn-primary">View
                                    <%=campground.title%>
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
                <% } %>
    </div>


    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
        const campgrounds = { features:<%- JSON.stringify(campgrounds) %>}
    </script>
    <script src="/javascripts/clusterMap.js"></script>
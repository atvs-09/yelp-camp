<%- layout("../layouts/boilerplate") %>
    <div class="container d-flex justify-content align-items-center my-5">
        <div class="row">
            <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                <div class="card shadow">
                    <img src="https://images.unsplash.com/photo-1571863533956-01c88e79957e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1267&q=80"
                        alt="" class="card-img-top" />
                    <div class="card-body">
                        <h5 class="card-title">Register</h5>
                        <div>
                            <form action="/register" method="POST" novalidate class="needs-validation">
                                <div class="mb-3">
                                    <label for="email" class="form-label">Enter your email</label>
                                    <input type="email" name="email" id="email" autofocus class="form-control" required>
                                    <div class="valid-feedback">
                                        Looks Good!
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="username" class="form-label">Enter your username</label>
                                    <input type="text" name="username" id="username" class="form-control" required>
                                    <div class="valid-feedback">
                                        Looks Good!
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="pwd" class="form-label">Enter your password</label>
                                    <input type="password" name="password" id="pwd" class="form-control" required>
                                    <div class="valid-feedback">
                                        Looks Good!
                                    </div>
                                </div>
                                <button class="btn btn-success w-100">Sign Up</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>